{
  "manifest_version": 2,
  "name": "Numan Vault",
  "version": "1.0",
  "description": "Quickly add bookmarks to your Numan Vault",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:5000/*"
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Add to Numan Vault",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
} 